{
  "manifest_version": 2,

  "name": "Background script",
  "description": "Run a background script",
  "version": "1.0",

  "browser_action": {
    "default_icon": "bee.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["myScript.js"]
    }
  ]
}